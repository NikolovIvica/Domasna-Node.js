<body>
    <a href="/create">Create new user</a>
    <h2>Table of users</h2>
    <table>
     <% users.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><a href="/user/<%= user.id %>/view">View</a></td>
        <td><a href="/user/<%= user.id %>/edit">Edit</a></td>
        <td><form action ='/user/<%= user.id %>/delete' method="POST">
        <button>Delete</button>
        </form></td>
      </tr>
     <% }) %>
    </table>
</body>

</html>